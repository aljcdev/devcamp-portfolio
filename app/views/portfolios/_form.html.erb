<%= form_for(@portfolio_item) do |port_item| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= port_item.label :title %>
        <%= port_item.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= port_item.label :subtitle %>
        <%= port_item.text_field :subtitle, class: "form-control" %>
      </div> 

      <div class="form-group">
        <%= port_item.file_field :main_image %>
      </div> 

      <div class="form-group">
        <%= port_item.file_field :thumb_image %>
      </div> 

    </div>

    <div class="col-md-6">
      <div class="form-group">
      <%= port_item.label :body %>
      <%= port_item.text_area :body, class: "form-control", rows: 12 %>
      </div>   
    </div>
   </div>

  <hr>
  <div class="row">
   <div class="col-md-12">
      <h2>Technoligies Used</h2>
      <div>
        <%= port_item.fields_for :technologies do |technology_form| %>
        <div class="form-group">
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class: "form-control" %>
        </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= port_item.submit "Save Portfolio Item", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>
